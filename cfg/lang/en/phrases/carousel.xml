<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<!DOCTYPE phrases SYSTEM "entities.dtd">

<epp:phrases xmlns="http://www.w3.org/1999/xhtml" xmlns:epp="http://eprints.org/ep3/phrase" xmlns:epc="http://eprints.org/ep3/control">

    <epp:phrase id="carousel-indicators">
    </epp:phrase>

    <epp:phrase id="carousel-control">
        <a class="left carousel-control" href="#bcarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a class="right carousel-control" href="#bcarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
    </epp:phrase>

    <epp:phrase id="carousel">
        <div style="clear:both" />
        <div id="bcarousel" class="carousel slide" data-ride="carousel">
            <epc:phrase ref="carousel-indicators" />
            <div class="carousel-inner">
                <epc:print expr="carousel(5)" />
            </div>
            <epc:phrase ref="carousel-control" />
        </div>
    </epp:phrase>

    <epp:phrase id="eprint_fieldname_carousel_featured">Featured in Carousel?</epp:phrase>
    <epp:phrase id="eprint_fieldhelp_carousel_featured">Select 'Yes' to include this record in the front page carousel.</epp:phrase>
    <epp:phrase id="eprint_radio_carousel_featured">
        <label>
            <epc:pin name="true" />Yes</label>
        <br/>
        <label>
            <epc:pin name="false" />No</label>
    </epp:phrase>

</epp:phrases>